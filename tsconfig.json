{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true
  },
  "exclude": ["test"],
  "include": [
    "./worker-configuration.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node"
  ]
}
